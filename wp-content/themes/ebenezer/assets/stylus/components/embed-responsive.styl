.embed-responsive {
    height: 0;
    padding-bottom: 56.25%;
    display: block;
    position: relative;
    overflow: hidden;
    
    > .media {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: 0;
    }
}