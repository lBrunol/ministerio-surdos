.list-events {
    > .item {

        margin-bottom: 20px;
        border-bottom: 1px solid $list-events-border-bottom;

        > .date {
            font-size: 12px;
            display: block;
        }

        > .link {
            width: 100%;
            padding-bottom: 15px;
            font-weight: bold;
            color: $list-events-link-color;
            text-decoration: none;
            display: inline-block;

            &:hover,
            &:focus,
            &:active {
                color: darken(@color, 30%);
                text-decoration: none;
                outline: 0;
            }
        }

        > .link > .icon {
            margin-left: -7px;
        }
    }
}