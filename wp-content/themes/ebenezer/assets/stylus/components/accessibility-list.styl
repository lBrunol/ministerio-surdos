.accessibility-list{

	&.-home {
		float: right;
		.accessibility-list-item .accessibility-list-button {
			color: $default-text-color;
		}

		.accessibility-list-item .accessibility-list-text {
			font-size: 13px;
		}
	}

	.accessibility-list-item {

		display: inline-block;
		
		.accessibility-list-button {
			padding-right: 0;
			padding-left: 20px;
			font-size: toRem(20px);
			font-weight: 700;
			color: $accessibility-list-icon;
			background: transparent;
			border: 0;
			
			&:hover,
			&:focus,
			&:active {
				color: $accessibility-list-icon-hover;
				outline: none;
			}

			.accessibility-list-icon:before {
				font-size: 100%;
			}
			
			^[1]:first-child ^[2..-1] {
				padding-left: 0;
			}
			
			^[1]:last-child ^[2..-1] {
				padding-left: 10px;
			}
		}		
	}	
}