.bread-site {
	
	padding: 0;
	margin: 0;
	
	> .item {
		font-size: toRem(14px);
		list-style: none;
		display: inline-block;	
	}
	
	> .item > .link {

		color: $bread-link;

		.php-active {
			font-weight: bold;
			cursor: text;

			&:hover,
			&:focus,
			&:active {
				text-decoration: none;
			}
		}
	}
	
	> .item > .icon {	
		
		&:before {
			color: $bread-link;
			transform: rotate(-90deg);
		}
	}
}