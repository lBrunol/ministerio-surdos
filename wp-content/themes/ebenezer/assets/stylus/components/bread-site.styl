.bread-site {
	
	padding: 0;
	margin: 0;
	
	.bread-site-item {
		font-size: toRem(14px);
		list-style: none;
		display: inline-block;	
	}

	.bread-site-item {
		.php-active {
			color: $bread-link;
			font-weight: bold;
			cursor: text;
		}
	}
	
	.bread-site-link {

		color: $bread-link;
	}
	
	.bread-site-icon {	
		
		&:before {
			color: $bread-link;
			transform: rotate(-90deg);
		}
	}
}