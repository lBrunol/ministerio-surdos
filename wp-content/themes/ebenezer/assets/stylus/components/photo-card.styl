.photo-card {
    width: 100%;
    margin-bottom: 20px;
    background-color: #fff;
    border-radius: 2px;
    overflow: hidden;
    box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12);

    .photo-card-image {
        text-align: center;
        border-radius: 2px 2px 0 0;
    }

    .photo-card-heading,
    .photo-card-description,
    .photo-card-actions {
        padding: 0 20px;
    }

    .photo-card-heading {
        .photo-card-title {
            color: #333;
            margin: 10px 0 5px;
        }
        .photo-card-subtitle {
            color: #666;
            font-size: toRem(16px);
            margin: 0;
        }
    }

    .photo-card-description
    .photo-card-description p,
    .photo-card-description div {
        font-size: toRem(14px);
    }

    .photo-card-list {
        font-family: montserrat;
        font-weight: 700;
    }

    .photo-card-actions {
        border-top: 1px solid #ccc;
    }

    .photo-card-button {
        display: block;
        color: #ccc;
        text-decoration: none;
        padding: 15px 0;
        transition: color .4s;
        &:hover {
            color: #333;
        }
    }
}