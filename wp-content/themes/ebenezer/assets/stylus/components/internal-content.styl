.internal-content {
    margin-top: 20px;

    h1 {
        font-size: toRem(28px);
    }

    h2 {
        text-transform: none;
        font-size: toRem(20px);
    }

    p {	
        font-size: toRem(16px);
    }

    /* Provis√≥rio */
    figure {
        width: auto!important;
        height: auto!important;
        // margin: 0;

        img {
            width: auto!important;
            height: auto;
            max-width: 100%;
            display: block;
        }

        figcaption {
            padding: 10px;
            font-family: montserrat;
            font-size: toRem(12px);
            font-weight: 700;
            color: $figure-site-caption-text;
            background: $figure-site-caption-bg;
        }
    }
}