.video-item {
    
    margin-bottom: 15px;
    display: flex;
    flex-wrap: nowrap;
    align-items: flex-start;

    > .link {
        margin-right: 5px;
    }

    > .content {
        > .title {
            margin-top: 0;
            margin-bottom: 15px;
            font-size: 14px;
            font-weight: 400;
            font-family: 'Open Sans';
            text-transform: none;
        }

        > .title > .link {
            text-decoration: none;
            color: inherit;
        }

        > .date { 
            font-size: 12px;
        }
    }
}