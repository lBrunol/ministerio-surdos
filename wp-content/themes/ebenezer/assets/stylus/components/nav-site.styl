.nav-site {

    font-size: 0;

    .nav-site-link {

        font-size: 14px;
        font-weight: bold;
        color: $header-text;
        text-decoration: none;
        text-transform: uppercase;
        position: relative;
        display: block;        
    }

    @media (min-width: $screen-lg-min){

        text-align: right;

        .nav-site-item {
            display: inline-block;
            margin-right: 15px;

            &:last-child {
                margin-right: 0;
            }
        }

        .nav-site-link {

            padding-bottom: 15px;

            &:after {
                content: '';
                width: 100%;
                height: 6px;
                bottom: 0;
                left: 0;
                background-color: $header-text-hover;
                transform: translateY(7px);
                transform-origin: bottom;
                transition: .2s all linear;
                position: absolute;
            }  

            &:hover,
            &:focus,
            &:active {
                color: $header-text-hover;
                outline: 0;

                &:after {
                    transform: translateY(0);
                }
            }
        }
    }    
}