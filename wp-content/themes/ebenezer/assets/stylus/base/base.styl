/**
 * Estilização base
 */
 
* {
	box-sizing: border-box;
}

html {
	font-family: $open-sans;
	font-size: $font-size;
	-webkit-font-smoothing: antialiased
	-moz-osx-font-smoothing: grayscale;
	color: $default-text-color;
}

::selection {
	background: $base;
	color: #fff;
}

ul {
	padding: 0;
	margin: 0;
}

li {
	list-style: none;
	margin-bottom: 0;
}

:focus {
	outline: 2px auto $default-text-color;
}