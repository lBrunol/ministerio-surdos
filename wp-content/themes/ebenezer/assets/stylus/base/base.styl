/**
 * Estilização básica do site
 */
 
* {
	box-sizing: border-box;
}

html {
	font-family: $open-sans;
	font-size: $font-size;
	-webkit-font-smoothing: antialiased
	-moz-osx-font-smoothing: grayscale;
	color: $default-text-color;
}

::selection {
	background: $base;
	color: #fff;
}

:focus {
	border: 0;
	outline: 2px auto $default-text-color;
}

h1 {
	margin-bottom: 30px;
	font-family: 'Montserrat';
	font-size: 24px;
	font-weight: 700;
	text-align: center;
	text-transform: uppercase;
}

ul {
	padding: 0;
	margin: 0;
}

li {
	list-style: none;
	margin-bottom: 0;
}

button {
	@extend .reset-button;
}