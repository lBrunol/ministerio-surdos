/**
 * Estilização básica do site
 */
 
* {
	box-sizing: border-box;
}

html {
	font-family: $open-sans;
	font-size: $font-size;
	-webkit-font-smoothing: antialiased
	-moz-osx-font-smoothing: grayscale;
	color: $default-text-color;
}

::selection {
	background: $base;
	color: #fff;
}

:focus {
	border: 0;
	outline: 2px auto $default-text-color;
}

h1,
h2 {
	margin-top: 0;
	font-family: 'Montserrat';
	font-weight: 700;
	text-transform: uppercase;
}

h1 {
	margin-bottom: 30px;	
	font-size: 24px;	
	text-align: center;	
}

h2 {
	margin-bottom: 30px;
	font-size: 20px;
}

p {
	line-height: 160%;
    margin-bottom: 30px;
}

ul {
	padding: 0;
	margin: 0;
}

a {
	color: $anchor-color;
	text-decoration: none;
	
	&:hover,
	&:focus,
	&:active {
		text-decoration: underline;
	}
}

li {
	list-style: none;
	margin-bottom: 0;
}

object {
	position: absolute;
    left: -1000px;
}

button {
	@extend .reset-button;
}