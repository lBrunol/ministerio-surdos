/**
 * Estilização básica do site
 */
 
* {
	box-sizing: border-box;
}

html {
	font-family: $open-sans;
	font-size: $font-size;
	-webkit-font-smoothing: antialiased
	-moz-osx-font-smoothing: grayscale;
	color: $default-text-color;
}

body {
	font-size: toRem(16px);
}

::selection {
	background: $base;
	color: #fff;
}

:focus {
	border: 0;
	outline: 2px auto $default-text-color;
}

h1,
h2 {
	margin-top: 0;
	font-family: 'Montserrat';
	font-weight: 700;
	text-transform: uppercase;
}

h1 {
	margin-bottom: 30px;	
	font-size: 24px;	
	text-align: center;	
}

h2 {
	font-size: 20px;
	margin-bottom: 30px;
}

p {
	font-size: 16px;
	line-height: 160%;
    margin-bottom: 30px;
}

ul {
	padding: 0;
	margin: 0;
}

a {
	color: $anchor-color;
	text-decoration: none;
	transition: .2s color linear;

	&:hover,
	&:focus,
	&:active {
		text-decoration: underline;
	}
}

li {
	list-style: none;
	margin-bottom: 0;
}

object {
	position: absolute;
    left: -1000px;
}

button {
	@extend .reset-button;
	transition-duration: .2s;
	transition-timing-function: linear;
	transition-property: color, background;
}

blockquote {
    padding: 10px 20px;
    margin: 0 0 20px;
    font-size: toRem(20px);
    border-left: 5px solid $header-text-hover;

	ol:last-child, 
	p:last-child, 
	ul:last-child {
		margin: 0;
	}
}